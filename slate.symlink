# Configs
config defaultToCurrentScreen	true
config nudgePercentOf 		screenSize
config resizePercentOf 		screenSize
config secondsBetweenRepeat     0.1
config checkDefaultsOnLoad 	true
config focusCheckWidthMax    	3000

# window hints
config windowHintsShowIcons		true
config windowHintsSpread		true
config windowHintsIgnoreHiddenWindows	false

# positioning grid
bind g:cmd grid padding:5 0:6,2 1:8,3


# The modifier keys
alias modifiers ctrl;alt;cmd


# Monitor Aliases
alias monitor-macbook-pro        0
alias monitor-cinema-display     1

# Bindings for specific applications
alias chrome        'Google Chrome'
bind w:${modifiers} focus ${chrome}

alias chrome_canary 'Google Chrome Canary'
bind w:${modifiers} focus ${chrome_canary}

alias editor         'Emacs'
bind e:${modifiers} focus ${editor}

alias terminal       'iTerm'
bind e:${modifiers} focus ${terminal}

alias mail       'Mail'
bind e:${modifiers} focus ${mail}

alias outlook       'Outlook'
bind e:${modifiers} focus ${outlook}

alias spotify       'Spotify'
bind w:${modifiers} focus ${spotify}

alias xcode         'xcode'
bind e:${modifiers} focus ${xcode}

# Screen positions, relative to current screen
alias full          move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY

alias rightmost     move screenOriginX+screenSizeX*0.4;screenOriginY  screenSizeX*0.6;screenSizeY
alias rightless     move screenOriginX+screenSizeX*0.6;screenOriginY  screenSizeX*0.4;screenSizeY
alias righttop	    move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY/2
alias rightbottom   move screenOriginX+screenSizeX/2;screenOriginY+screenSizeY/2    screenSizeX/2;screenSizeY/2

alias leftmost      move screenOriginX;screenOriginY                  screenSizeX*0.6;screenSizeY
alias leftless      move screenOriginX;screenOriginY                  screenSizeX*0.4;screenSizeY
alias lefttop    move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY/2
alias leftbottom    move screenOriginX;screenOriginY+screenSizeY/2    screenSizeX/2;screenSizeY/2


# Location bindings
bind j:${modifiers} ${lefthalf}
bind k:${modifiers} ${full}
bind l:${modifiers} ${righthalf}
bind i:${modifiers} ${lefttop}
bind m:${modifiers} ${leftbottom}
bind o:${modifiers} ${righttop}
bind ,:${modifiers} ${rightbottom}

# Throw
bind ]:${modifiers} throw right resize full
bind [:${modifiers}  throw left resize full

# Resize
bind right:${modifiers} resize +10% +0
bind left:${modifiers}  resize -10% +0
bind up:${modifiers}    resize +0   -10%
bind down:${modifiers}  resize +0   +10%


# Concrete positions
alias 1-full        ${full}			${monitor-macbook-pro}
alias 1-left        ${lefthalf}			${monitor-macbook-pro}
alias 1-right       ${righthalf}		${monitor-macbook-pro}

alias 2-full        ${full}			${monitor-cinema-display}
alias 2-left        ${lefthalf}			${monitor-cinema-display}
alias 2-right       ${righthalf}		${monitor-cinema-display}
alias 2-righttop    ${righttop}			${monitor-cinema-display}
alias 2-rightbottom ${rightbottom}		${monitor-cinema-display}


#####################
##     LAYOUTS     ##
#####################

layout macbook	${chrome}             ${1-full}
layout macbook	${chrome_canary}      ${1-full}
layout macbook	${terminal}	      ${1-full}
layout macbook	${editor}	      ${1-full}
layout macbook	${mail}               ${1-full}
layout macbook	${outlook}	      ${1-full}
layout macbook	${spotify}	      ${1-full}
layout macbook	${xcode}	      ${1-full}
default macbook			      resolutions:${monitor-macbook-pro}
bind 1:${modifiers} layout macbook


layout macbook-and-cinema	${chrome}		${1-right}
layout macbook-and-cinema	${chrome_canary}	${1-left}
layout macbook-and-cinema       ${terminal}		${2-right}
layout macbook-and-cinema       ${editor}		${2-left}
layout macbook-and-cinema       ${mail}			${1-left}
layout macbook-and-cinema       ${outlook}		${1-left}
layout macbook-and-cinema       ${spotify}		${1-left}
layout macbook-and-cinema       ${xcode}		${2-full}
default macbook-and-cinema	resolutions:${monitor-macbook-pro};${monitor-cinema-display};
bind 2:${modifiers} layout macbook-and-cinema

# Source the contents of the per-user configuration file if it exists
source ~/.slate-user if_exists
