## Java version 8

# hard code it!
export JAVA_VERSION=1.8

# or try to be smart and figuring it out
if [ -z $JAVA_VERSION ]; then
    echo "need to set JAVA_VERSION => 'export JAVA_VERSION=1.7' or add to ~/.zsh.d/"
else
    if [[ -f /usr/libexec/java_home ]]; then
        export JAVA_HOME="$(/usr/libexec/java_home -v $JAVA_VERSION)"
    fi
fi

